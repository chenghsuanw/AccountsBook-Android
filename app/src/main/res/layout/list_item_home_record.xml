<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="32dp"
    android:paddingTop="16dp"
    android:paddingEnd="32dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/iv_list_item_home_record_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_item_home_record_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_list_item_home_record_description"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/iv_list_item_home_record_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="食物" />

    <TextView
        android:id="@+id/tv_list_item_home_record_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_list_item_home_record_amount"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toEndOf="@id/tv_list_item_home_record_category"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="卡拉雞腿堡" />

    <TextView
        android:id="@+id/tv_list_item_home_record_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tv_list_item_home_record_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="250" />

</androidx.constraintlayout.widget.ConstraintLayout>
